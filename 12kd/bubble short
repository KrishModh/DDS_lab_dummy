#include <iostream>

const int n = 5;
int A[n] = {64, 34, 25, 12, 22};

void swap(int x, int y) {
    int temp = A[x];
    A[x] = A[y];
    A[y] = temp;
}

void show() {
    for (int k = 0; k < n; k++) {
        std::cout << A[k] << "\t";
    }
    std::cout << std::endl;
}

int main() {
    show();

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - 1 - i; j++) {
            if (A[j] > A[j + 1]) {
                swap(j, j + 1);
            }
        }
    }

    show();

    return 0;
}
